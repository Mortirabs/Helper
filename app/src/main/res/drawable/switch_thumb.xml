<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape
            android:shape="oval">
            <solid
                android:color="#5c5c5c"/>
            <size
                android:height="16dp"
                android:width="16dp"
                />
            <stroke
                android:width="2dp"
                android:color="#d9d9d9"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape
            android:shape="oval">
            <solid
                android:color="#5c5c5c"/>
            <size
                android:height="16dp"
                android:width="16dp"
                />
            <stroke
                android:width="2dp"
                android:color="#d9d9d9"/>
        </shape>
    </item>
</selector>