<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Helper" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/body_color</item>
        <item name="colorPrimaryVariant">@color/body_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/body_color</item>
        <item name="body">@drawable/body_l</item>
        <item name="head">@drawable/head_l</item>
        <item name="eyes">@drawable/eye_l</item>
        <item name="triangle">@drawable/triangle_toggle_l</item>
        <item name="toggle">@drawable/toggle_shape_l</item>
        <item name="menus">@drawable/menu</item>
    </style>
</resources>